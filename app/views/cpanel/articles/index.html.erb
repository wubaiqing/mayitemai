<ul class="breadcrumb">
  <li>
    <a href="<%= cpanel_homes_path %>">首页</a>
  </li>
  <li class="active">
    文章管理
  </li>
</ul>

<%= form_for :article, method: :get, html: {class: "well"} do |f| %>

  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td width="15%"><%= t('article.title') %>:</td>
        <td>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control col-sm-2", name: "taobao_id", value: params[:title] %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-default" id="searchCustomer" type="submit" name="yt0">搜索</button>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        <%= t('article.title') %>
      </th>
      <th>
        <%= t('buttons.action') %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr class="<%= article.state == 0 ? "warning" : "" %>">
      <td>
        <%= article.id %>
      </td>
      <td>
        <%= link_to article.title, edit_cpanel_article_path(article), {"data-no-turbolink": true} %>
      </td>
      <td>
        <%= content_tag("span", raw("&nbsp;")) %>
        <%= link_to(icon('edit'), edit_cpanel_article_path(article), {"data-toggle": "tooltip", "original-title": "修改", "data-no-turbolink": true} ) %>
        <%= content_tag("span", raw("&nbsp;")) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @brands %>

